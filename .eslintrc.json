{
    "extends": [
    	"airbnb",
    	"prettier",
        "prettier/react"
    ],

    "plugins": [
    	"prettier"
    ],

    "parserOptions": {
    	"ecmaVersion": 2016,
    	"sourceType": "module",
    	"ecmaFeatures": {
    		"jsx": true
    	}
    },

    "env": {
    	"browser": true,
    	"node": true,
    	"es6": true
    },

    "rules": {
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": [ "Link" ],
                "specialLink": [ "hrefLeft", "hrefRight", "to"],
                "aspects": [ "noHref", "invalidHref", "preferButton"]
            }
        ]
    }
}